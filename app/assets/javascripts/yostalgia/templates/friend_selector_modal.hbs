{{#modal-dialog action='close'}}
  <div class="modal-dialog-content">
    <div class="modal-dialog-header">
      <button type="button" class="modal-dialog-close" {{action 'close'}}>&times;</button>
      <h4 class="modal-dialog-title">Select friends to {{actionText}}</h4>
    </div>

    <div class="modal-dialog-body">
      {{#if isLoading}}
        <p>Loading...</p>
      {{else}}
        {{#if model.length}}
          <ul class="friend-select-list">
            {{#each arrangedContent}}
              <li>
                {{view Yostalgia.NonBubbleCheckboxView checked=isSelected}}
                <a href="#" {{action 'toggleFriend' this}} {{bind-attr title=profile.fullName}}>
                  {{avatar profile size=30}}
                  {{profile.fullName}}
                </a>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>You have no available friends to invite</p>
        {{/if}}
      {{/if}}
    </div>

    <div class="modal-dialog-footer">
      <button {{action 'close'}} class="btn btn-secondary btn-rounded">
        Cancel
      </button>
      <button {{action 'save'}} class="btn btn-primary btn-rounded">
        {{actionText}}
      </button>
    </div>
  </div>
{{/modal-dialog}}
