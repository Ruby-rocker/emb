<div class="modal modal-full" id="login-signup">
  <div class="modal-close">
    {{#link-to 'home.index'}}<i class="ss-delete"></i>{{/link-to}}
  </div>

  <div class="login-container">
    <h1>Forgotten password</h1>
    {{#unless isFinished}}
      <p>Enter your e-mail address or username to reset your password:</p>
      <form class="form" {{action sendResetLink on="submit"}} >
        <div class="control-group">
          <label class="control-label hidden">Email / Username</label>
          <div class="controls">
            {{input type="text" value=login placeholder="Email or Username:" autofocus="autofocus" }}
          </div>
        </div>
        <div class="control-actions">
          {{input type="submit" value="Send Reset Link" class="btn btn-primary btn-rounded" disabled=submitDisabled }}
          {{#if isSaving}}
            <span class="loading">sending...</span>
          {{/if}}
        </div>
      </form>
    {{else}}
      <p>Great! Please check your e-mail for a reset password link.</p>
    {{/unless}}
  </div>

</div>
