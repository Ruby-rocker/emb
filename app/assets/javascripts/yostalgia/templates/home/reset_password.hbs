<div class="modal modal-full" id="login-signup">
  <div class="modal-close">
    {{#link-to 'home.index'}}<i class="ss-delete"></i>{{/link-to}}
  </div>

  <div class="login-container">
    <h1>Reset password</h1>
    {{#unless isFinished}}
      <p>Enter your e-mail address or username to reset your password:</p>
      <form class="form" {{action changePassword on="submit"}} >
        <div class="control-group">
          <label class="control-label hidden">New Password</label>
          <div class="controls">
            {{input type="password" value=newPassword placeholder="New Password:" autofocus="autofocus" autoComplete=off }}
          </div>
        </div>
        <div class="control-actions">
          {{input type="submit" value="Change Password" class="btn btn-primary btn-rounded" disabled=submitDisabled }}
          {{#if isSaving}}
            <span class="loading">saving...</span>
          {{/if}}
        </div>
      </form>
    {{else}}
      <p>
        Great! Your password has been reset. Now you can
        {{#link-to 'home.sign_in'}}sign in!{{/link-to}}
      </p>
    {{/unless}}
  </div>

</div>
