<div class="modal modal-full" id="login-signup">
  <div class="modal-close">
    {{#link-to 'home.index'}}<i class="ss-delete"></i>{{/link-to}}
  </div>

  <div class="login-container">
    <h1>Forgotten Search Password</h1>
    {{#unless isFinished}}
      <p>Enter your e-mail address to reset your search password:</p>
      <form class="form" {{action sendSearchResetLink on="submit"}} >
        <div {{bind-attr class=":control-group emailValidation.ok:success emailValidation.failed:error"}}>
          <label class="control-label hidden">Email</label>
          <div class="controls">
            {{input type="text" value=login placeholder="Email:" autofocus="autofocus" }}
            {{view Yostalgia.InputTipView validationBinding="emailValidation"}}
          </div>
        </div>
        <div class="control-actions">
          {{input type="submit" value="Send Reset Link" class="btn btn-primary btn-rounded" disabled=submitDisabled }}
          {{#if isSaving}}
            <span class="loading">sending...</span>
          {{/if}}
        </div>
      </form>
    {{else}}
      <p>Great! Please check your e-mail for a reset search password link.</p>
    {{/unless}}
  </div>

</div>
