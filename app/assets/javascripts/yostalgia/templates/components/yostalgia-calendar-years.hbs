<div class="cal-header">
  <a href="#" {{action gotoPreviousYears}} class="cal-prev-button">
    <i class="icon-arrow-left"></i>
  </a>
  <div class="cal-header-date">
    <span class="cal-header-year">
      <a href="#" {{action "showDays" target="calendar"}}>
        {{view.headingYear}}
      </a>
    </span>
  </div>
  <a href="#" {{action gotoNextYears}} class="cal-next-button">
    <i class="icon-arrow-right"></i>
  </a>
</div>
<div class="cal-body">
  {{#each row in view.rows}}
    <div class="cal-row">
      {{#each cell in row}}
        {{view yearView content=cell}}
      {{/each}}
    </div>
  {{/each}}
</div>
<div class="cal-footer">
  <a href="#" {{action gotoToday target="calendar"}} class="cal-today-button">
    Today
  </a>
</div>
